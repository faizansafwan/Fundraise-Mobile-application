<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >



            <ImageView
                android:id="@+id/imageDonate"
                android:layout_width="match_parent"
                android:padding="20dp"
                android:layout_height="230dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="37dp"
                android:layout_marginRight="57dp"
                android:layout_marginLeft="57dp"
                android:background="@drawable/image_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/donate" />

            <TextView
                android:id="@+id/textDonate"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:textAlignment="center"
                android:background="@drawable/text_border"
                android:layout_marginLeft="57dp"
                android:layout_marginRight="57dp"
                android:layout_marginBottom="300dp"
                android:layout_marginTop="-2dp"
                android:paddingTop="13dp"
                android:text="Make Donation"
                android:textSize="29dp"/>


            <ImageView
                android:id="@+id/imageProject"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="-255dp"
                android:layout_marginRight="57dp"
                android:background="@drawable/image_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/project1" />

            <TextView
                android:id="@+id/textProject"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:textAlignment="center"
                android:background="@drawable/text_border"
                android:layout_marginLeft="57dp"
                android:layout_marginRight="57dp"
                android:layout_marginTop="-2dp"
                android:paddingTop="10dp"
                android:text="Our Project"
                android:textSize="29dp"/>

            <ImageView
                android:id="@+id/imageDonor"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:layout_height="230dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="45dp"
                android:layout_marginRight="57dp"
                android:layout_marginLeft="57dp"
                android:background="@drawable/image_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/donor" />

            <TextView
                android:id="@+id/textDonor"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="-1dp"
                android:layout_marginRight="57dp"
                android:layout_marginBottom="80dp"
                android:background="@drawable/text_border"
                android:paddingTop="13dp"
                android:text="Well-Wishers"
                android:textAlignment="center"
                android:textSize="29dp" />

            <ImageView
                android:id="@+id/imageLocation"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:layout_height="230dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-30dp"
                android:layout_marginRight="57dp"
                android:layout_marginLeft="57dp"
                android:background="@drawable/image_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/location" />

            <TextView
                android:id="@+id/textLocation"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="-1dp"
                android:layout_marginRight="57dp"
                android:layout_marginBottom="80dp"
                android:background="@drawable/text_border"
                android:paddingTop="13dp"
                android:text="Our Location"
                android:textAlignment="center"
                android:textSize="29dp" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>